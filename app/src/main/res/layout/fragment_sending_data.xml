<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.View.SendingDataFragment">

    <ImageView
        android:id="@+id/sendingDataIvLogo"
        android:layout_width="match_parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginTop="250dp"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/biglogo"
        app:layout_constraintBottom_toTopOf="@+id/sendingDataTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sendingDataTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/poppins"
        android:text="@string/sending_data"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/sendingDataIvLogo"
        app:layout_constraintStart_toStartOf="@+id/sendingDataIvLogo"
        app:layout_constraintTop_toBottomOf="@+id/sendingDataIvLogo" />


</androidx.constraintlayout.widget.ConstraintLayout>