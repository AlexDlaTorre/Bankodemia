<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.view.CreateAccountFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/templateTopBarSingle"
                layout="@layout/template_toplogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/createAccountBtnBackToMain"
                style="@style/backTextButtonIconGray"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_min"
                android:text="@string/go_back_home"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/templateTopBarSingle"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/createAccountTvInstructionsCreateAccount"
                style="@style/contentText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_default"
                android:text="@string/account_information"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/createAccountBtnBackToMain" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/createAccountTilMail"
                style="@style/outlinedTextFieldBlue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_middle"
                app:layout_constraintEnd_toEndOf="@+id/createAccountTvInstructionsCreateAccount"
                app:layout_constraintStart_toStartOf="@+id/createAccountTvInstructionsCreateAccount"
                app:layout_constraintTop_toBottomOf="@+id/createAccountTvInstructionsCreateAccount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/createAccountTietMail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mail"
                    android:inputType="textEmailAddress"
                    tools:ignore="TextContrastCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/createAccountTvPrivacityInstructions"
                style="@style/contentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_size_max"
                android:text="@string/information_privacy_notice"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/createAccountTilMail" />

            <TextView
                android:id="@+id/createAccountTvPrivacyNotice"
                style="@style/contentTextPurple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy_notice"
                app:layout_constraintEnd_toEndOf="@+id/createAccountTvPrivacityInstructions"
                app:layout_constraintStart_toStartOf="@+id/createAccountTvPrivacityInstructions"
                app:layout_constraintTop_toBottomOf="@+id/createAccountTvPrivacityInstructions" />

            <Button
                android:id="@+id/createAccountBtnContinue"
                style="@style/disabledButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/common_size_middle"
                android:layout_marginTop="@dimen/common_size_extra_large_large"
                android:layout_marginBottom="@dimen/common_size_middle"
                android:text="@string/continue_b"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/createAccountTilMail"
                app:layout_constraintStart_toStartOf="@+id/createAccountTilMail"
                app:layout_constraintTop_toBottomOf="@id/createAccountTvPrivacyNotice"
                tools:ignore="TextContrastCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
