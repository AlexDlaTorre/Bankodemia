<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.bankodemia.UI.View.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_cardsFragment"
            app:destination="@id/cardsFragment" />
        <action
            android:id="@+id/action_navigation_home_to_servicesFragment"
            app:destination="@id/servicesFragment" />
        <action
            android:id="@+id/action_navigation_home_to_homeDetailFragment"
            app:destination="@id/homeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/cardsFragment"
        android:name="com.example.bankodemia.UI.View.home.CardsFragment"
        android:label="fragment_cards"
        tools:layout="@layout/fragment_cards" />
    <fragment
        android:id="@+id/servicesFragment"
        android:name="com.example.bankodemia.UI.View.home.ServicesFragment"
        android:label="fragment_services"
        tools:layout="@layout/fragment_services" />
    <fragment
        android:id="@+id/homeDetailFragment"
        android:name="com.example.bankodemia.UI.View.home.HomeDetailFragment"
        android:label="fragment_home_detail"
        tools:layout="@layout/fragment_home_detail" >
        <action
            android:id="@+id/action_homeDetailFragment_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>
</navigation>