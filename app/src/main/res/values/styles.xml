<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fillButtonBlue" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/principal_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/common_size_min</item>
    </style>

    <style name="outlinedButtonBlue" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/principal_blue</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="strokeColor">@color/principal_blue</item>
        <item name="strokeWidth">@dimen/common_strokewidth_min</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/common_size_min</item>
    </style>

    <style name="fillButtonPurple" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/secondary_purple</item>
        <item name="android:textSize">@dimen/common_textsize_middle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/common_size_min</item>
    </style>

    <style name="outlinedButtonPurple" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/secondary_purple</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="strokeColor">@color/secondary_purple</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/common_size_min</item>
    </style>

    <style name="disabledButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:enabled">false</item>
        <item name="android:backgroundTint">@color/principal_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAppearance">@style/buttonText</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">@dimen/common_size_min</item>
    </style>

    <style name="backTextButtonIconGray" parent="Widget.Material3.Button.TextButton.Icon">
        <item name="android:textColor">@color/principal_gray</item>
        <item name="android:textAppearance">@style/secondaryButtonText</item>
        <item name="icon">@drawable/ic_arrow_back</item>
    </style>

    <style name="outlinedTextFieldBlue" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="hintTextColor">@color/principal_blue</item>
        <item name="boxStrokeColor">@color/principal_blue</item>
        <item name="android:textColorHint">@color/principal_gray</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/contentText</item>
    </style>

    <style name="outlinedTextFieldPurple" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColorHint">@color/secondary_purple</item>
        <item name="boxStrokeColor">@color/secondary_purple</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAppearance">@style/contentText</item>
    </style>

    <style name="titleTextWhite" parent="titleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="subtitleTextWhite" parent="subtitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contentTextWhite" parent="contentText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="contentTextVariantWhite" parent="contentTextVariant">
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="titleTextBlue" parent="titleText">
        <item name="android:textColor">@color/principal_blue</item>
    </style>

    <style name="subtitleTextBlue" parent="subtitleText">
        <item name="android:textColor">@color/principal_blue</item>
    </style>

    <style name="contentTextBlue" parent="contentText">
        <item name="android:textColor">@color/principal_blue</item>
    </style>

    <style name="contentTextVariantBlue" parent="contentTextVariant">
        <item name="android:textColor">@color/principal_blue</item>
    </style>


    <style name="titleTextPurple" parent="titleText">
        <item name="android:textColor">@color/secondary_purple</item>
    </style>

    <style name="subtitleTextPurple" parent="subtitleText">
        <item name="android:textColor">@color/secondary_purple</item>
    </style>

    <style name="contentTextPurple" parent="contentText">
        <item name="android:textColor">@color/secondary_purple</item>
    </style>

    <style name="contentTextVariantPurple" parent="contentTextVariant">
        <item name="android:textColor">@color/secondary_purple</item>
    </style>


    <style name="titleTextGray" parent="titleText">
        <item name="android:textColor">@color/principal_gray</item>
    </style>

    <style name="subtitleTextGray" parent="subtitleText">
        <item name="android:textColor">@color/principal_gray</item>
    </style>

    <style name="contentTextGray" parent="contentText">
        <item name="android:textColor">@color/principal_gray</item>
    </style>

    <style name="contentTextVariantGray" parent="contentTextVariant">
        <item name="android:textColor">@color/principal_gray</item>
    </style>

    <style name="titleText" parent="TextAppearance.AppCompat">
        <item name="android:textFontWeight">@integer/common_fontWeight_middle</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/common_textsize_large</item>
    </style>

    <style name="subtitleText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/common_textsize_middle</item>
        <item name="android:textFontWeight">@integer/common_fontWeight_middle</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="buttonText" parent="TextAppearance.AppCompat">
        <item name="fontWeight">@integer/common_fontWeight_default</item>
        <item name="android:textSize">@dimen/common_textsize_middle</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight">@integer/common_fontWeight_default</item>
    </style>

    <style name="secondaryButtonText" parent="TextAppearance.AppCompat">
        <item name="fontWeight">@integer/common_fontWeight_default</item>
        <item name="android:textSize">@dimen/common_textsize_min</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textFontWeight">@integer/common_fontWeight_default</item>
    </style>

    <style name="contentText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/common_textsize_default</item>
        <item name="android:textFontWeight">@integer/common_fontWeight_min</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="contentTextVariant" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/common_textsize_min</item>
        <item name="android:textFontWeight">@integer/common_fontWeight_min</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

</resources>